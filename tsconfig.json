{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]   // @ 별칭 쓰는 중이면 필요
    },
    "skipLibCheck": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames" : true
  },
  "include": ["src", "vite.config.ts"]
}
